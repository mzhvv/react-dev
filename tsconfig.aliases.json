// tsconfig.alias.json

{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@public/*": ["./public/*"],

      // src
      "@core/*": ["./src/core/*"],
      "@libs/*": ["./src/core/shared/libs/*"],
      "@utils/*": ["./src/core/shared/utils/*"],

      "@apps/*": ["./src/apps/*"],
      "@react-dev/*": ["./src/react-dev/*"],
      "@ui/*": ["./src/ui/*"],
      "@/*": ["./src/*"],

      // service
      "@accumulators/*": ["src/apps/__accumulators__/*"],
      "@aggregator": ["src/react-dev/__aggregator__/*"]
    }
  }
}
