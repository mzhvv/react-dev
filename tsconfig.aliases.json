// tsconfig.alias.json

{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@global/*": ["./src/react-dev/__global__/*"],
      "@accumulators/*": ["src/apps/__accumulators__/*"],

      "@apps/*": ["./src/apps/*"],
      "@react-dev/*": ["./src/react-dev/*"],
      "@ui/*": ["./src/ui/*"],

      "@/*": ["./src/*"],
      "@public/*": ["./public/*"]
    }
  }
}
