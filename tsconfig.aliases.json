// tsconfig.aliases.json

{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@public/*": ["./public/*"],

      "@core/features/*": ["./src/core/features/*"],
      "@core/libs/*": ["./src/core/shared/libs/*"],
      "@core/utils/*": ["./src/core/shared/utils/*"],
      "@core/types/*": ["./src/core/types/*"],
      "@core/*": ["./src/core/*"],

      "@react-dev/aggregator/*": ["./src/react-dev/__aggregator__/*"],
      "@react-dev/*": ["./src/react-dev/*"],

      "@template-app": ["./src/apps/__template-app__"],
      "@template-app/*": ["./src/apps/__template-app__/*"],
      "@apps/accumulators/*": ["./src/apps/__accumulators__/*"],
      "@apps/*": ["./src/apps/*"],

      "@ui/*": ["./src/ui/*"],

      "@/*": ["./src/*"]
    }
  }
}
